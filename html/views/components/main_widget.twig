<div class="p-4 mb-6 bg-white border border-gray-200 rounded-2xl shadow-2xl 2xl:col-span-2 light:border-gray-700 sm:p-6 light:bg-gray-800">
	<div class="flex justify-between w-full mb-6">
		<div>
			<p class="text-lg font-semibold text-gray-500 light:text-gray-400">Last week sales</p>
		</div>
	</div>
	<!-- Card Footer -->
	<div class="flex flex-col items-center justify-between pt-3 mt-4 border-t border-gray-200 sm:pt-6 light:border-gray-700">
		<div class="overflow-x-auto bg-white rounded-lg shadow overflow-y-auto relative w-full">
			<table class="border-collapse table-auto w-full whitespace-no-wrap bg-white table-striped relative">
				<thead>
					<tr class="text-left">
						{% for key in sales_last_week[0]|keys %}
							{% if key != "id" %}
								<th class="py-2 px-3 sticky top-0 border-b border-gray-200 bg-gray-100 text-gray-600 font-semibold text-sm">
									{{ key|capitalize }}
								</th>
							{% endif %}
						{% endfor %}
					</tr>
				</thead>
				<tbody>
					{% for sale in sales_last_week %}
						<tr class="hover:bg-gray-100">
							{% for key, value in sale %}
								{% if key != "id" %}
									<td class="py-2 px-3 border-b border-gray-200 text-sm">{{ value }}</td>
								{% endif %}
							{% endfor %}
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<a href="/index.php/sales/" class="mt-4 text-sm font-semibold text-primary-700 hover:text-primary-500 transition duration-200 ease-in-out">
			<button class="flex items-center justify-center w-full px-4 py-2 text-sm font-semibold text-primary-700 uppercase bg-gray-100 rounded-lg hover:bg-gray-200 light:text-primary-500 light:bg-gray-700">
				View all sales
				<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
				</svg>
			</button>
		</a>
	</div>
</div>
